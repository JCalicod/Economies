<script>
    function chooseToCreditAccount() {
        var toCreditChoice = document.getElementById('toCredit');
        toCreditChoice.addEventListener('change', getToCreditAccount, false);
    }

    function getToCreditAccount(evt) {
        var accountID = evt.srcElement.value;

        $.ajax({
            url: "{{ path('get_account') }}",
            type: "POST",
            data: {
                accountID: accountID,
                type: 'credit'
            },
            dataType: "html"
        }).done(function (response) {
            document.getElementById('cards-credit-content').innerHTML = response;
            transfer();
        });
    }
</script>