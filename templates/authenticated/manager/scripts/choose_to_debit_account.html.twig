<script>
    var toDebit = document.getElementById('toDebit');
    toDebit.addEventListener('change', getToDebitAccount, false);

    function getToDebitAccount(evt) {
        var accountID = evt.srcElement.value;

        $.ajax({
            url: "{{ path('get_account') }}",
            type: "POST",
            data: {
                accountID: accountID,
                type: 'debit'
            },
            dataType: "html"
        }).done(function (response) {
            document.getElementById('cards-debit-content').innerHTML = response;
            document.getElementById('cards-credit-content').innerHTML = '';
            chooseToCreditAccount();
        });
    }
</script>