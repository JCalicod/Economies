{% extends 'authenticated/base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/main.css') }}">
    <link rel="stylesheet" href="{{ asset('css/media/max-800px.css') }}">
    {{ parent() }}
{% endblock %}

{% block body %}


    <div class="page connected">
        <div class="main-block">
            <div class="login-block">
